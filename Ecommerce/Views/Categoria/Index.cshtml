@model IEnumerable<Domain.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Nova categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoriaId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>