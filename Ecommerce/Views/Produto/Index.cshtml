@{
    //Utiliza o Layout padrão que eu definir
    Layout = "~/Views/Shared/_Layout.cshtml";
    //recebe da sacola
    List<Produto> produtos = ViewBag.Produtos;
    DateTime dataHora = ViewBag.DataHora;

}

<h2>Gerenciamento de Produtos</h2>
<a class="btn btn-info m-2" asp-action="Cadastrar">Cadastrar Produto</a>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">Nome:</th>
            <th scope="col">Descrição</th>
            <th scope="col">Preço</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Criado em</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Produto item in produtos)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>@item.Preco.ToString("C2")</td>
                <td>@item.Quantidade</td>
                <td>@item.CriadoEm</td>
                <td>
                    <a class="btn btn-danger" asp-action="Remover" asp-route-id="@item.ProdutoId">Remover</a>
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="Alterar" asp-route-id="@item.ProdutoId">Alterar</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<p>
    <b>Dados atualizados em: </b>@dataHora

</p>
