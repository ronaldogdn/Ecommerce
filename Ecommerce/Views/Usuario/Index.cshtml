@* Recebe a lista de usuarios *@
@model List<Usuario>
@{
    //recebe da sacola com o @model não é necessário
    //List<Produto> produtos = ViewBag.Produtos;
    DateTime dataHora = ViewBag.DataHora;

}

<h2>Gerenciamento de usuários</h2>
<a class="btn btn-info m-2" asp-action="Cadastrar">Cadastrar usuários</a>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">E-mail:</th>
            <th scope="col">Senha</th>
            <th scope="col">Criado em</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @* Model recebe a informação da lista *@
        @foreach (Usuario item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.Senha</td>
                <td>@item.CriadoEm</td>
            </tr>
        }

    </tbody>
</table>
<p>
    <b>Dados atualizados em: </b>@dataHora

</p>
